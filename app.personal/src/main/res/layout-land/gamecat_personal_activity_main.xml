<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_container"
    android:background="@color/gamecat_color_00000000"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="52"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:background="@color/gamecat_clolor_CC0A0D16"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <com.youximao.sdk.lib.common.common.widget.CircleImageView
                    android:id="@+id/gamecat_person_icon"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/game_cat_cat" />

                <CheckBox
                    android:id="@+id/gamecat_cb_personal"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="2dp"
                    android:button="@null"
                    android:checked="false"
                    android:drawableTop="@color/gamecat_clolor_transparent"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/gamecat_clolor_transparent"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/gamecat_cb_gift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="2dp"
                    android:button="@null"
                    android:drawableTop="@drawable/gamecat_tab_icon_giftpackage"
                    android:gravity="center"
                    android:text="礼包"
                    android:textColor="@drawable/gamecat_primarybar_txt"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/gamecat_cb_forum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="2dp"
                    android:button="@null"
                    android:drawableTop="@drawable/gamecat_tab_icon_forum"
                    android:gravity="center"
                    android:text="论坛"
                    android:textColor="@drawable/gamecat_primarybar_txt"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/gamecat_cb_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="2dp"
                    android:button="@null"
                    android:drawableTop="@drawable/gamecat_tab_icon_giftpackage"
                    android:gravity="center"
                    android:text="帮助"
                    android:textColor="@drawable/gamecat_primarybar_txt"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <TextView
        android:id="@+id/id_text_view_invisible"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="48"
        android:visibility="visible" />

</LinearLayout>