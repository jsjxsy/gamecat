<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/ll_gv"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="@drawable/gamecat_recharge_white"
        android:focusable="true">

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/gamecat_money"
            android:drawablePadding="2dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="10元"
            android:textColor="@color/color_F67B29"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/tv_meow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_money"
            android:layout_centerHorizontal="true"
            android:text="100喵点"
            android:textColor="@color/color_666666"
            android:textSize="13dp" />

        <ImageView
            android:id="@+id/iv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/gamecat_confirm"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_money"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="@drawable/gamecat_recharge_white"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_money"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:background="@color/color_FFFFFF"
            android:gravity="center"
            android:hint="自定义金额"
            android:inputType="numberDecimal"
            android:maxLength="5"
            android:padding="5dp"
            android:textColorHint="@color/color_cccccc"
            android:textCursorDrawable="@color/color_cccccc"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>