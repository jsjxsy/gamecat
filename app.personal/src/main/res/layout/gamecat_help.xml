<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gamecat_color_ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48.5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/game_cat_left_arrow_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/gamecat_contact_service"
            android:textColor="@color/gamecat_color_333333"
            android:textSize="17sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gamecat_color_e5e5e5" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="42dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/gamecat_service_phone"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/gamecat_color_333333"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_service_phone"
            android:layout_width="wrap_content"
            android:text="4008-876-8787"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:textColor="@color/gamecat_color_5E97F6"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="42dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/gamecat_service_account"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/gamecat_color_333333"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:text="12345678"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:textColor="@color/gamecat_color_cccccc"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gamecat_color_e5e5e5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:textSize="14sp"
        android:textColor="@color/gamecat_color_333333"
        android:text="关注“游戏猫GameCat”微信公众号获得在线客服支持"
        android:layout_height="wrap_content" />
    
    <ImageView
        android:id="@+id/img_qr_code"
        android:layout_width="100dp"
        android:src="@color/gamecat_color_333333"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:layout_marginTop="5dp"
        android:layout_height="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:text="@string/gamecat_save_photo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />

</LinearLayout>