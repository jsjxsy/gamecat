<resources>

    <style name="gamecat_item_input_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:background">@color/color_FFFFFF</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/gamecat_color_333</item>
        <item name="android:textColorHint">@color/gamecat_hint_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="gamecat_button_common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:background">@drawable/gamecat_selector_button_login</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gamecat_color_ffffff</item>
    </style>

    <style name="game_cat_text_view_tip">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gamecat_color_f85959</item>
    </style>

</resources>
