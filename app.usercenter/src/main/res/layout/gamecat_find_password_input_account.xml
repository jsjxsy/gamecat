<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="@dimen/login_dialog_width"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/gamecat_shape_background"
        android:padding="20dp">


        <TextView
            android:id="@+id/id_text_view_phone_register_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:text="找回密码"
            android:textColor="@color/gamecat_color_ffffff"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/id_layout_input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_text_view_phone_register_title"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/gamecat_shape_input_background"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/id_edit_text_input_phone"
                    style="@style/gamecat_item_input_edittext"
                    android:background="@color/gamecat_color_ffffff"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:hint="喵号/手机号"
                    android:inputType="number"
                    android:maxLength="11" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/id_text_view_wrong_phone"
                        style="@style/game_cat_text_view_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11dp"
                        android:layout_marginRight="24dp"
                        android:text="手机号不正确" />

                    <ImageView
                        android:id="@+id/id_image_view_clear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="6dp"
                        android:layout_toLeftOf="@id/id_text_view_wrong_phone"
                        android:src="@drawable/game_cat_login_clear" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/id_confirm_button"
            style="@style/gamecat_button_common"
            android:layout_below="@id/id_layout_input_password"
            android:layout_marginTop="10dp"
            android:text="下一步" />

    </RelativeLayout>
</RelativeLayout>














