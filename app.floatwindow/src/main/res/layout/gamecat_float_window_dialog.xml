<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:drawable/screen_background_dark_transparent"
    android:orientation="vertical"
    tools:context=".WindowActivity">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/common_dialog_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="摇一摇可隐藏/显示小图标"
            android:textColor="@color/gamecat_color_333"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/id_image_view_shake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/game_cat_float_window_dialog_shake" />

        <TextView
            android:id="@+id/id_text_view_no_disturb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/game_cat_float_window_dialog_checked_box"
            android:drawablePadding="4dp"
            android:text="不在提性"
            android:textColor="@color/gamecat_color_999999"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="#D2D3D5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gamecat_color_f5f6f9"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_text_view_cancel_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/touch_clear_bg"
                android:gravity="center"
                android:padding="18dp"
                android:text="取消"
                android:textColor="@color/color_333333"
                android:textSize="16sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#D2D3D5" />

            <TextView
                android:id="@+id/id_text_view_confirm_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/touch_clear_bg"
                android:gravity="center"
                android:padding="18dp"
                android:text="隐藏"

                android:textColor="@color/color_F67B29"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>