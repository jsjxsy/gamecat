<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/gamecat_color_6612142D"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/gamecat_logout_bg_shape">

        <ImageView
            android:id="@+id/img_gamecat_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/game_cat_cat" />

        <TextView
            android:id="@+id/tv_gamecat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="21dp"
            android:layout_toRightOf="@+id/img_gamecat_icon"
            android:text="游戏猫手游"
            android:textColor="@color/gamecat_color_ffffff"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/rl_gift_forum"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/img_gamecat_icon"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="17dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">

                <LinearLayout
                    android:id="@+id/ll_gift"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/game_cat_gift_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="20dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/game_cat_gift" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="礼包"
                        android:textColor="@color/gamecat_color_ffffff"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_forum"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/game_cat_forum_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="20dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/game_cat_forum" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="论坛"
                        android:textColor="@color/gamecat_color_ffffff"
                        android:textSize="13sp" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/rl_gift_forum"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/gamecat_logout_btn_bg_shape"
            android:gravity="center"
            android:text="退出游戏"
            android:textColor="@color/gamecat_color_ffffff"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_below="@+id/btn_logout"
            android:layout_height="15dp"/>

    </RelativeLayout>

</RelativeLayout>